{
  "network": {
    "name": "mijinTest",
    "description": "catapult development network"
  },

  "port": 3000,
  "crossDomainHttpMethods": ["GET", "POST", "PUT", "OPTIONS"],
  "cors": "*",
  "clientPrivateKey": "659D289A30D436DBBC80A5C1B0A4919FB6626A434FE1DB42DC0461D8015A5DAC",
  "extensions": ["accountLink", "accountProperties", "aggregate", "exchange", "config", "lock", "metadata", "metadata_nem", "mosaic", "multisig", "namespace", "operation", "receipts", "richlist", "service", "storage", "supercontract", "transfer", "upgrade", "streaming"],

  "https": {
    "ca": "",
	"certificate": "",
	"key": "",
	"passphrase": ""
  },

  "db": {
    "url": "mongodb://localhost:27017/",
    "name": "catapult",
    "pageSizeMin": 10,
    "pageSizeMax": 100,
    "pageSizeStep": 25,
    "pageSizeDefault": 20,
    "maxConnectionAttempts": 5,
    "baseRetryDelay": 500
  },

  "apiNode": {
    "host": "127.0.0.1",
    "port": 7900,
    "publicKey": "10E8A1CCCFE02C4C22C12D42277520F1FC7D471E570C9FE2A2961ECB020BC596",
    "timeout": 1000
  },

  "transactionCache": {
    "flushFrequency": 1500
  },

  "websocket": {
    "mq": {
      "host": "127.0.0.1",
      "port": 7902,
      "monitorInterval": 500,
      "connectTimeout": 10000,
      "monitorLoggingThrottle": 60000
    },
    "allowOptionalAddress": true
  },

  "throttling": {
    "burst": 10000,
    "rate": 15
  },

  "endpoints": {
    "GET /mosaic/:mosaicId/richlist": {
      "throttling": {
        "burst": 10,
        "rate": 5
      }
    }
  },

  "logging": {
    "console": {
      "colorize": true,
      "level": "verbose",
      "handleExceptions": true,
      "prettyPrint": true,
      "timestamp": true
    },
    "file": {
      "level": "verbose",
      "handleExceptions": true,
      "prettyPrint": true,
      "timestamp": true,
      "filename": "catapult-rest.log",
      "maxsize": 20971520,
      "maxFiles": 100
    }
  }
}
